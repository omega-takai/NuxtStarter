{
  "name": "nuxt-starter",
  "version": "1.0.0",
  "description": "Nuxt.js with TypeScript",
  "author": "Tomonari Takai",
  "private": true,
  "scripts": {
    "clean": "rimraf .nuxt dist public .out coverage",
    "predev": "rimraf .nuxt",
    "dev": "nuxt-ts",
    "build": "nuxt-ts build",
    "generate": "nuxt-ts generate",
    "generate:gh-pages": "cross-env BASE_DIR=/NuxtStarter/ nuxt-ts generate",
    "start": "nuxt-ts start",
    "lint": "yarn lint:script && yarn lint:style",
    "lint:script": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.css **/*.scss **/*.vue",
    "lint:fix": "yarn lint:script --fix && yarn lint:style --fix",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{css,scss,vue}": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "yarn clean && yarn install",
      "post-checkout": "yarn clean && yarn install",
      "post-rebase": "yarn clean && yarn install",
      "pre-auto-gc": "yarn clean"
    }
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "2.0.0",
    "@nuxtjs/axios": "5.12.4",
    "@nuxtjs/dotenv": "1.4.1",
    "@nuxtjs/pwa": "3.3.3",
    "destyle.css": "2.0.2",
    "nuxt": "2.14.7"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "2.0.3",
    "@nuxtjs/eslint-config-typescript": "5.0.0",
    "@nuxtjs/eslint-module": "3.0.2",
    "@nuxtjs/style-resources": "1.0.0",
    "@nuxtjs/stylelint-module": "4.0.0",
    "@vue/test-utils": "1.1.1",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "cross-env": "7.0.3",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-nuxt": "2.0.0",
    "eslint-plugin-prettier": "3.1.4",
    "fibers": "5.0.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.2",
    "prettier": "2.2.1",
    "pug": "3.0.0",
    "pug-plain-loader": "1.0.0",
    "rimraf": "3.0.2",
    "sass": "1.29.0",
    "sass-loader": "10.1.0",
    "stylelint": "13.8.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recess-order": "2.3.0",
    "stylelint-config-recommended-scss": "4.2.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-prettier": "1.1.2",
    "stylelint-scss": "3.18.0",
    "ts-jest": "26.4.4",
    "vue-jest": "4.0.0-rc.0"
  },
  "browserslist": [
    "defaults",
    "not < 1%",
    "IE 11"
  ]
}
